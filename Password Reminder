exact_name="Huseyin"
user_pwd="strongpassword"
#input validation:
while True:
  name_check=input("Type your name here to reveal your password:")
  if not name_check.isalpha():
    print("Invalid input, you can use only letters.\n")
    continue
  else:
    break
#sharing information
if name_check.lower()==exact_name.lower():
  print(f"Hello, {exact_name}! The password is : {user_pwd}")
else:
  print(f"Hello, {name_check}! See you later.")
